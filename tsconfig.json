{
  "compilerOptions": {
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./public",
    "noEmitOnError": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "include": [
    "app/**.ts",
    "app/**.tsx"
  ]
}
